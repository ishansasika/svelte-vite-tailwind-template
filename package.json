{
  "name": "svelte-vite-tailwind-template",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "es5",
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.14.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "svelte": "^5.15.0",
    "svelte-check": "^4.1.3",
    "tailwindcss": "^3.4.17",
    "tslib": "^2.8.1",
    "typescript": "~5.7.2",
    "vite": "^6.0.5"
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.9.0",
    "lucide-svelte": "^0.562.0",
    "svelte-sonner": "^1.0.7"
  }
}
